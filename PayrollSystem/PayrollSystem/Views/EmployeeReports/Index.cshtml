@using System.Globalization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<PayrollSystem.Models.Dtos.EmployeeReportViewDto>

@{
    ViewData["Title"] = "Employee Report";
}

<h2>Employee Report</h2>

<form method="get" asp-action="Index"> <!-- Ensure the action points to Index -->
    <div class="form-group">
        <label for="month">Month:</label>
        <input type="number" id="month" name="month" class="form-control" required min="1" max="12" value="@ViewBag.month" />
    </div>
    
    <div class="form-group">
        <label for="year">Year:</label>
        <input type="number" id="year" name="year" class="form-control" required min="2000" max="2100" value="@ViewBag.Year" />
    </div>

    <button type="submit" class="btn btn-primary">Generate Report</button>
</form>

@if (Model.Any())
{
    <h3>Report for @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName((int)ViewBag.Month) @ViewBag.Year</h3> <!-- Display the selected month and year -->
    
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Employee Name</th>
            <th>Job Grade</th>
            <th>Department Name</th>
            <th>Absent Days</th>
            <th>Total Work Years</th>
            <th>Base Salary</th>
            <th>Incentive (%)</th>
            <th>Discount (%)</th>
            <th>Total Salary</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeName</td>
                <td>@employee.JobGrade.ToString()</td>
                <td>@employee.DepartmentName</td>
                <td>@employee.AbsentDays</td>
                <td>@employee.TotalWorkYears</td>
                <td>@employee.BaseSalary.ToString("C")</td>
                <td>@employee.Incentive %</td> 
                <td>@employee.Discount %</td>
                <td>@employee.TotalSalary.ToString("C")</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No records found for the selected month and year.</p>
}
