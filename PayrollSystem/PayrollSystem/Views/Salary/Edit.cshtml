@model PayrollSystem.Models.Domain.Salary

<h2>Edit Salary</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="JobGrade"></label>
        <input asp-for="JobGrade" class="form-control" readonly />
        <span asp-validation-for="JobGrade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BaseSalary"></label>
        <input asp-for="BaseSalary" class="form-control" />
        <span asp-validation-for="BaseSalary" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>