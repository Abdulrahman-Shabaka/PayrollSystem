@using Microsoft.AspNetCore.Mvc.TagHelpers
@using PayrollSystem.Models.Domain
@model PayrollSystem.Models.Domain.Salary

<h2>Add New Salary</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="JobGrade"></label>
        <select asp-for="JobGrade" class="form-control">
            @foreach (var grade in Enum.GetValues(typeof(JobGrade)).Cast<JobGrade>())
            {
                <option value="@((int)grade)">@grade</option>
            }
        </select>
        <span asp-validation-for="JobGrade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BaseSalary"></label>
        <input asp-for="BaseSalary" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="BaseSalary" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>