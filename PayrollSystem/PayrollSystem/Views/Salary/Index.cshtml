@model IEnumerable<PayrollSystem.Models.Domain.Salary>

<h2>Salary List</h2>
<table class="table">
    <thead>
    <tr>
        <th>Job Grade</th>
        <th>Base Salary</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var salary in Model)
    {
        <tr>
            <td>@salary.JobGrade</td>
            <td>@salary.BaseSalary</td>
            <td>
                    <a asp-action="Edit" asp-route-id="@salary.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@salary.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Salary</a>